# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md, mdown, markdown}]
trim_trailing_whitespace = false

[{package,bower}.json]
indent_style = spaces
indent_size = 2

[*.yml]
indent_style = spaces
